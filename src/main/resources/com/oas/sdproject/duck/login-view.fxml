<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oas.sdproject.duck.LoginController">
    <ImageView fx:id="icon" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
        <Image url="@../../../../assets/images/ic_duck.png" />
    </ImageView>
   <TextField fx:id="emailField" promptText="Email">
      <VBox.margin>
         <Insets bottom="10.0" left="40.0" right="40.0" top="10.0" />
      </VBox.margin>
   </TextField>
   <PasswordField fx:id="passwordField" promptText="Password">
      <VBox.margin>
         <Insets bottom="10.0" left="40.0" right="40.0" top="10.0" />
      </VBox.margin></PasswordField>
   <Button fx:id="loginButton" mnemonicParsing="false" onAction="#onLoginButtonClicked" style="-fx-background-color: #4e87ff;" text="Login" textAlignment="CENTER">
      <VBox.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </VBox.margin>
      <padding>
         <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
      </padding>
   </Button>
</VBox>
